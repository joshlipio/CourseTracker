@model IEnumerable<CS4540_PS2.Models.CourseInstance>

@{
    ViewData["Title"] = "Department Overview";
}

<div>
    <p class="display-4 container"> CS Department Overview </p>
</div>
<table class="table bg-light">
    <thead class="bg-danger text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th>
                Progress
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.ID)
                </th>
                <td>
                    <a asp-action="DetailsString" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Number)</a>
</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <!--Link to a dummy professor page-->
                    <a href="/Home/Professor">@Html.DisplayFor(modelItem => item.Professor)</a>
                </td>
                <td>
                    <!--Generate random number for Progress bar-->
                    @{
                        var r = new Random();
                        int s = r.Next(100);
                    }
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @s%;" aria-valuenow="@s" aria-valuemin="0" aria-valuemax="100">@s%</div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
